# Disk permissions and mounts required for this project.
container_commands:
  # @todo - mount storage for shared spool and other files that Mautic expects to be writable.
  41_io_set_permissions:
    command: sudo chown -R webapp:webapp .
  42_io_set_permissions_writable_folders:
    command: sudo chgrp -R webapp mautic/app/cache mautic/app/logs mautic/media/files mautic/media/dashboards mautic/media/images mautic/translations mautic/app/spool
  43_io_set_permissions_writable_folders:
    command: sudo chmod -R ug+wx mautic/app/cache mautic/app/logs mautic/media/files mautic/media/dashboards mautic/media/images mautic/translations mautic/app/spool
  44_io_set_permissions_touch_files:
    command: sudo touch mautic/app/bootstrap.php.cache mautic/.php_cs
  45_io_set_permissions_writable_files:
    command: sudo chgrp webapp mautic/app/bootstrap.php.cache mautic/.php_cs
  46_io_set_permissions_writable_files:
    command: sudo chmod ug+wx mautic/app/bootstrap.php.cache mautic/.php_cs