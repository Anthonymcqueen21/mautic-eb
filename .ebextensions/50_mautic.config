# General commands for Mautic.
container_commands:
  50_mautic_iplookup:
    command: sudo -u webapp bash -c ". /opt/elasticbeanstalk/support/envvars ; /usr/bin/php /var/app/current/mautic/app/console mautic:iplookup:download"
  51_mautic_cache_clear:
    command: sudo -u webapp bash -c ". /opt/elasticbeanstalk/support/envvars ; /usr/bin/php /var/app/current/mautic/app/console cache:clear"
  52_mautic_migrations:
    command: sudo -u webapp bash -c ". /opt/elasticbeanstalk/support/envvars ; /usr/bin/php /var/app/current/mautic/app/console doctrine:migrations:migrate"
    leader_only: true
